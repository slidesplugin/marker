# https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.bat]
end_of_line = crlf

[*.{go,puml,nsi,nsh,Makefile,mk}]
indent_style = tab

[*.{md,yml,yaml,json,json5,js,mjs,ts,mts,css,html,gohtml,gotmpl,toml,scss,sass,xml,lua,vue}]
indent_size = 2

[*.{md,html}]
max_line_length = off
